<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DisplayMangaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/mangaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manga Title"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/edit_manga_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:minHeight="@dimen/min_height"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lastNumberOwned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Number Owned"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/edit_manga_last_owned_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:minHeight="@dimen/min_height"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/missingNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Missing Numbers"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/edit_manga_missing_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:minHeight="@dimen/min_height"
        android:textSize="18sp" />

</LinearLayout>